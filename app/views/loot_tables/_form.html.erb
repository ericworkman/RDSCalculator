<%= form_with(model: loot_table, class: "my-4 flex flex-col gap-4") do |form| %>
  <% if loot_table.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(loot_table.errors.count, "error") %></h2>

      <ul>
        <% loot_table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :count, style: "display: block" %>
    <%= form.number_field :count, min: 1, max: 100 %>
  </div>

  <div class="flex items-center gap-5">
    <%= form.submit class: "p-2 bg-teal-300 hover:bg-teal-400 cursor-pointer rounded" %>
    <%= link_to "Cancel", loot_tables_path %>
  </div>
<% end %>
